# 天罡 WAF 环境配置示例
# 复制此文件为 .env 并修改相应配置

# 应用配置
APP_NAME=Tiangang WAF
APP_ENV=production
APP_DEBUG=false
APP_KEY=your-app-key-here

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8787
SERVER_WORKERS=4

# Redis 配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# 数据库配置
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=tiangang_waf
DB_USERNAME=root
DB_PASSWORD=

# 日志配置
LOG_LEVEL=info
LOG_CHANNEL=file
LOG_FILE=waf.log

# WAF 配置
WAF_ENABLED=true
WAF_MODE=proxy
WAF_TIMEOUT=1000
WAF_CACHE_TTL=300

# 监控配置
MONITORING_ENABLED=true
METRICS_ENABLED=true
ALERT_ENABLED=true
